<div 
    class="quiz-slide-content flex flex-col items-center p-4 space-y-4 border rounded-md shadow-md"
    data-utm="{{ slide.fields.utm }}"
>
    <div class="flex flex-col items-center justify-center space-y-2 text-center">
        <h2 class="text-2xl font-semibold">{{ slide.fields.question_text }}</h2>
        <p class="text-sm text-gray-600">Choose an option that best fits:</p>
    </div>
    <div class="options flex justify-center gap-4">
        {% for option in slide.fields.quiz_answer_options %}
            <button class="quiz-btn" data-product-tag="{{ option.fields.product_tags }}">
                {% if option.fields.image %}
                    <img src="{{ option.fields.image | image_url: 'small' }}" alt="{{ option.fields.title }}" class="w-16 h-16 mb-2" width="64" height="64">
                {% endif %}
                <span>{{ option.fields.title }}</span>
                <p class="text-xs text-gray-500">{{ option.fields.description }}</p>
            </button>
        {% endfor %}
    </div>
    <div class="flex flex-col items-center space-y-2 w-full mt-4">
        <button class="cta-btn bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" next>
            next
        </button>
        <div class="text-gray-500 text-sm">1 of {{ quiz_slides.size }}</div>
        <div class="w-full bg-gray-300 rounded-full h-1.5">
            <div class="bg-blue-500 h-1.5 rounded-full" style="width: 22%;"></div>
        </div>
    </div>
</div>
